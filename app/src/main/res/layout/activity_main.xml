<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:layout_margin="25dp"
    tools:context=".MainActivity">

    <!-- Profile Label -->
    <TextView
        android:id="@+id/AppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textColor="@color/navy_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Profile Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileIMG"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/sgpic"
        android:elevation="2dp"
        app:shapeAppearance="@style/CircleImageView"
        android:contentDescription="@string/profile_img"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/AppTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Blue background block -->
    <View
        android:id="@+id/bgBlue"
        android:layout_width="368dp"
        android:layout_height="154dp"
        android:layout_marginTop="-70dp"
        android:background="@color/navy_blue"
        app:layout_constraintBottom_toBottomOf="@id/skills"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileIMG" />


    <!-- Name -->
    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_name"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/beige"
        android:elevation="2dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/profileIMG"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Email Text -->
    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_email"
        android:textColor="@color/beige"
        android:textSize="14dp"
        android:gravity="center"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/profileName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Summary Skills -->
    <TextView
        android:id="@+id/skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_skills"
        android:textColor="@color/beige"
        android:textSize="12dp"
        android:gravity="center"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/profileEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- Basic Information Title -->
    <TextView
        android:id="@+id/textBasicInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/basic_info"
        android:textStyle="bold"
        android:textColor="@color/navy_blue"
        app:layout_constraintTop_toBottomOf="@id/skills"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Birthday Text -->
    <TextView
        android:id="@+id/textBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/birthday_text"
        android:textSize="18sp"
        android:textColor="@color/navy_blue"
        app:layout_constraintTop_toBottomOf="@id/textBasicInfo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/iconBirthdayArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="@string/arrow"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/textBirthday"
        app:layout_constraintBottom_toBottomOf="@id/textBirthday"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/birthdaySeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/textBirthday"
        android:layout_marginTop="10dp"/>


    <!-- Address Text -->
    <TextView
        android:id="@+id/textAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address_text"
        android:textSize="18sp"
        android:textColor="@color/navy_blue"
        app:layout_constraintTop_toBottomOf="@id/birthdaySeparator"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/iconAddressArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="@string/arrow"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/textAddress"
        app:layout_constraintBottom_toBottomOf="@id/textAddress"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/addressSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/textAddress"
        android:layout_marginTop="10dp"/>

    <!-- Degree Text -->
    <TextView
        android:id="@+id/textDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/degree_text"
        android:textSize="18sp"
        android:textColor="@color/navy_blue"
        app:layout_constraintTop_toBottomOf="@id/addressSeparator"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/iconDegreeArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="@string/arrow"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/textDegree"
        app:layout_constraintBottom_toBottomOf="@id/textDegree"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/degreeSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/textDegree"
        android:layout_marginTop="10dp"/>

    <!-- Years in Service Text -->
    <TextView
        android:id="@+id/textYIS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yis_text"
        android:textSize="18sp"
        android:textColor="@color/navy_blue"
        app:layout_constraintTop_toBottomOf="@id/degreeSeparator"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/iconYISArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="@string/arrow"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/textYIS"
        app:layout_constraintBottom_toBottomOf="@id/textYIS"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/yisSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/textYIS"
        android:layout_marginTop="10dp"/>

    <!-- Skills Text -->
    <TextView
        android:id="@+id/textSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skills_text"
        android:textSize="18sp"
        android:textColor="@color/navy_blue"
        app:layout_constraintTop_toBottomOf="@id/yisSeparator"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/iconSkillsArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="@string/arrow"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/textSkills"
        app:layout_constraintBottom_toBottomOf="@id/textSkills"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/skillsSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/textSkills"
        android:layout_marginTop="10dp"/>

    <!-- Button -->
    <!-- Go to Details Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoToHobbies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Me"
        android:backgroundTint="@color/navy_blue"
        app:layout_constraintTop_toBottomOf="@id/textSkills"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>